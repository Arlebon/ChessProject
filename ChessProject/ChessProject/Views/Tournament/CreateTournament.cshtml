@using ChessProject.DL.Enums
@using ChessProject.Models.Tournament
@using ChessProject.DL.Entities
@model TournamentFormDto

@{
    ViewData["Title"] = "New Tournament";
}

<h1>New Tournament</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTournament">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinPlayers" class="control-label"></label>
                <input asp-for="MinPlayers" class="form-control" value="2"/>
                <span asp-validation-for="MinPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPlayers" class="control-label"></label>
                <input asp-for="MaxPlayers" class="form-control" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinElo" class="control-label"></label>
                <input asp-for="MinElo" class="form-control" />
                <span asp-validation-for="MinElo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxElo" class="control-label"></label>
                <input asp-for="MaxElo" class="form-control" />
                <span asp-validation-for="MaxElo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WomenOnly" /> @Html.DisplayNameFor(model => model.WomenOnly)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationDeadline" class="control-label"></label>
                <input asp-for="RegistrationDeadline" class="form-control" type="date" min="@DateTime.Today.AddDays(Model.MinPlayers).ToString("yyyy-MM-dd")" value="@DateTime.Today.AddDays(Model.MinPlayers).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="RegistrationDeadline" class="text-danger" ></span>
            </div>
            @* **** Categories **** *@
            <div class="form-group">
                <label class="control-label">Categories</label>
                @foreach (var cat in Model.AvailableCategories)
                {
                    <div class="form-check">
                        <label class="form-check-label" for="cat@(cat.Id)">@cat.Name</label>
                        <input class="form-check-input" type="checkbox" 
                               name="Categories" value="@(cat.Id)" 
                               id="cat@(cat.Id)" />
                    </div>
                }
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ListTournament" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTournament">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

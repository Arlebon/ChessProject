@using ChessProject.DL.Enums
@using ChessProject.Extensions
@model List<ChessProject.Models.Tournament.TournamentListDto>

<h1>Tournaments</h1>

@if (TempData["OnDeleteMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["OnDeleteMessage"]
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Players</th>
            <th>Elo Range</th>
            <th>Status</th>
            <th>Categories</th>
            <th>Women Only</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.Location</td>
            <td>@t.CurrentPlayers / @t.MaxPlayers</td>
            <td>@(t.MinElo?.ToString() ?? "-") - @(t.MaxElo?.ToString() ?? "-")</td>
            <td>@t.Status</td>
            <td> 
                @foreach (var cat in t.Categories)
                {
                    <span class="badge bg-primary me-1">@cat.Name</span>
                }
            </td>
            <td>@(t.WomenOnly ? "Yes" : "No")</td>
            <td>@t.RegistrationDeadline.ToString("dd/MM/yyyy")</td>
            <td>
                <a class="btn btn-primary" asp-controller="Tournament" asp-action="Details" asp-route-id="@t.Id">Details</a>
            </td>
            @*      *@
        </tr>
    }
    </tbody>
</table>
@if (User.IsConnected() && User.GetRole() == Role.Admin)
{
    <a class="btn btn-primary" asp-action="CreateTournament" asp-controller="Tournament">Create new Tournament</a>
}


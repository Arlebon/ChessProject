@using ChessProject.DL.Enums
@using ChessProject.Models.User
@model UserRegisterFormDTO

<h1>Add Member</h1>
<hr/>
<form asp-action="AddMember">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row justify-content-around">
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="UserName" class="control-label m-2"></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="Email" class="control-label m-2"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row justify-content-around">
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="BirthDate" class="control-label m-2">@Html.DisplayNameFor(model => model.BirthDate)</label>
				<input asp-for="BirthDate" class="form-control" />
				<span asp-validation-for="BirthDate" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="ELO" class="control-label m-2"></label>
				<input asp-for="ELO" class="form-control" />
				<span asp-validation-for="ELO" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row justify-content-around">
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="Gender" class="control-label m-2"></label>
				<select class="form-select" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
				<span asp-validation-for="Gender" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row col-auto justify-content-center">
		<div>
			<button type="submit" class="btn btn-primary mt-2">Add Member</button>
		</div>
	</div>
</form>